<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jessi.pms">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Home"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login"
            android:label="@string/app_login" />
        <activity android:name=".Register"
            android:label="@string/app_register" />
        <activity android:name=".Profile"
            android:label="@string/app_profile" />
        <activity android:name=".ChangePassword"
            android:label="@string/app_change_password" />
        <activity android:name=".AddPatient"
            android:label="@string/app_add_patient" />
        <activity android:name=".PatientList"
            android:label="@string/app_patient_list" />
        <activity android:name=".Log"
            android:label="@string/app_user_log" />
    </application>

</manifest>